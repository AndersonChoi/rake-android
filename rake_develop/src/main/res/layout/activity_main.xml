<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">


    <TextView
        android:id="@+id/text_token"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TOKEN"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/button_track"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/button_track"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TRACK"
        app:layout_constraintTop_toBottomOf="@+id/text_token"
        app:layout_constraintBottom_toTopOf="@+id/button_flush"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button_flush"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FLUSH"
        app:layout_constraintTop_toBottomOf="@+id/button_track"
        app:layout_constraintBottom_toTopOf="@+id/button_set_server_port"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button_set_server_port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SET SERVER PORT"
        app:layout_constraintTop_toBottomOf="@+id/button_flush"
        app:layout_constraintBottom_toTopOf="@+id/switch_auto_flush"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Switch
        android:id="@+id/switch_auto_flush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="TOGGLE AUTO FLUSH "
        android:switchPadding="10dp"
        android:checked="false"
        android:textOff="OFF"
        android:textOn="ON"
        app:layout_constraintTop_toBottomOf="@+id/button_set_server_port"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>